@model FialBP.ViewModel.VmBusCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Bus</h2>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@using (Html.BeginForm("Create", "BusDTs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            Category:@*Another Way of Dropdown*@
            <input list="Category" name="CategoryName" id="CategoryName" required autocomplete="off">
            <datalist id="Category">
                @foreach (var item in Model.CategoryList)
                {
                    <option value="@item.CategoryName" />
                }
            </datalist>
        </div>
        <div class="form-group">
            <div id="ProData" class="Table">
                <div id="RowData" class="Row">
                    <input type="text" name="BusDTName" placeholder="BusDTName" />
                    <input type="text" name="Quantity" placeholder="Quantity" />
                    <input type="text" name="Price" placeholder="Price" />
                    <input type="date" name="BookingDate" placeholder="BookingDate" />
                    <input type="file" name="imgFile" placeholder="imgFile" />
                    <a id="addRow" href="#" class="btn btn-xs btn-success"><i>+</i></a><hr />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default">
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>

    $('#ProData').on('click', '#addRow', function () {
        $('#ProData').append('<div id="RowData" class="Row"><input type="text" name="BusDTName" placeholder="BusDTName" /><input type="text" name="Quantity" placeholder="Quantity" /><input type="text" name="Price" placeholder="Price" /><input type="date" name="BookingDate" placeholder="BookingDate" /><input type="file" name="imgFile" placeholder="imgFile" /><a id="addRow" href="#" class="btn btn-xs btn-success"><i>+</i></a><a id="deleteRow" href="#" class="btn btn-xs btn-danger"><i>-</i></a><hr /></div>');
        $('#ProData').addClass();
        return false;//prevent form submission
    });

    $('#ProData').on('click', '#deleteRow', function () {

        $(this).parent().remove();
        return false;//prevent form submission
    });

</script>

